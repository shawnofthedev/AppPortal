@model AppPortal.Models.MunisVw_EmployeeMaster
@{
    ViewData["Title"] = "LeaveBuyBack";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Annual Leave Buy Back Form</h3>

<hr />

<h4 style="color:red">@TempData["ErrorMessage"]</h4>
<h4 style="color:green">@ViewData["Success"]</h4>

<form asp-action="Query" class="form-horizontal"> 

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="EmployeeNumber" class="control-label col-md-2"></label> 
        <div class="col-md-2">
            <input asp-for="EmployeeNumber" class="form-control" autofocus="autofocus" />
        </div>
    </div> 

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10"> 
            <br />
            <input type="submit" value="Submit" class="btn btn-primary" /> 
        </div>
    </div>

</form>

<script type="text/javascript">
    document.getElementById('EmployeeNumber').focus();
</script>

