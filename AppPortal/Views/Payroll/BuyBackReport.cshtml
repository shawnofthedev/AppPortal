@model AppPortal.ViewModels.BuyBackRequestViewModel
@{
    ViewBag.Title = "BuyBackReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<h3>Leave Buy Back Report</h3>

<hr />
 
<form asp-action="ReportViewer">
    <div class="col-md-4"> 
        @Html.DropDownListFor(m => m.LeaveBuyBackRequests, new SelectList(Model.LeaveBuyBackRequests), "Select Pay Period End Date for report", new { @class = "form-control"})
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <br />
            <button type="submit" class="btn btn-primary">Submit</button> 
        </div>
    </div>
</form>

