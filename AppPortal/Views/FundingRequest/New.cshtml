@model AppPortal.Models.Vw_DivisionMaster
@{
    ViewData["Title"] = "New";
}

<h3>Funding Request</h3>

<hr />

<h4 style="color:red">@TempData["ErrorMessage"]</h4>

<form asp-action="FundingRequestForm" class="form-horizontal"> 

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="ProgramNo" class="control-label col-md-2"></label> 
            <div class="col-md-2">
                <input asp-for="ProgramNo" class="form-control" />
            </div> 
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10"> 
                <br />
                <input type="submit" value="Next" class="btn btn-primary" /> 
            </div>
        </div>

</form>

<script type="text/javascript">
    document.getElementById('EmployeeNumber').focus();
</script>


