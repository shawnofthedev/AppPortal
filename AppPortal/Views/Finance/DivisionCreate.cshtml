@model AppPortal.ViewModels.OrgViewModel

@{
    ViewData["Title"] = "New Division";
}

<h2>New Division</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveDivision">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrgChart.Division.DivisionName" class="control-label"></label>
                <input asp-for="OrgChart.Division.DivisionName" class="form-control" />
                <span asp-validation-for="OrgChart.Division.DivisionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.OrgChart.Division.DivLead)
                @Html.DropDownListFor(m => m.OrgChart.Division.DivLeadId, new SelectList(Model.Leads, "Id", "DivLeadName"), "Select a Secretary", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DivisionList">Back to List</a>
</div>

